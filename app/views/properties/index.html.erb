<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th>路線名</th>
      <th>駅名</th>
      <th>徒歩時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.rent %></td>
        <td><%= property.address %></td>
        <td><%= property.age %></td>
        <td><%= property.remark %></td>
        <% n=0 %>
        <% property.stations.each do |station| %>
          <td><%= station.line %></td>
          <td><%= station.name %></td>
          <td><%= station.time %></td>
          <td><%= link_to 'Show', property %></td>
          <td><%= link_to 'Edit', edit_property_path(property) %></td>
          <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        </tr>
        <% end %>
      <% end %>
  </tbody>
</table>

<br>

